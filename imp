cd /opt
docker image build -t $JOB_NAME:$BUILD_ID .
docker image tag $JOB_NAME:$BUILD_ID nmeshram/$JOB_NAME:$BUILD_ID
docker image push nmeshram/$JOB_NAME:$BUILD_ID
docker image tag $JOB_NAME:$BUILD_ID nmeshram/$JOB_NAME:latest
docker image push nmeshram/$JOB_NAME:latest
docker image rmi $JOB_NAME:$BUILD_ID nmeshram/$JOB_NAME:$BUILD_ID nmeshram/$JOB_NAME:latest

**********************************************************************************

- hosts: all
  tasks:
   - name: stop container
     shell: docker container stop myweb
   - name: remove container
     shell: docker container rm myweb
   - name: remove docker image
     shell: docker image rm nmeshram/nitin
   - name: create container
     shell: docker container run -itd --name myweb -p 9000:80 nmeshram/nitin
